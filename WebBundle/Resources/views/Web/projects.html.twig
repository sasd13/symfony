{% extends "MyWebsiteWebBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - MyProjects{% endblock %}

{% block class_header %}header2{% endblock %}

{% block section %}
	<!---Start-content---->
	<div class="content">
		<div class="wrap">
			<!---start-Features---->
			<div class="feature-grids">
				<div class="feature-grid-head feature-grid-head1">
					<div class="feature-grid-head-top feature-grid-head-top1">
						<label> </label><span> </span> <label> </label>
						<div class="clear"> </div>
					</div>
					<h3><span>My</span> PROJECTS</h3>
					<p class="proinfo">Résumés de tous mes projets personnels et universitaires</p>
				</div>
				<div class="clear"> </div>
				{% if list_projects is null %}
					<p>Aucun projet disponible...</p>
				{% else %}
					{% for project in list_projects %}
						{% include "MyWebsiteWebBundle:Web:Project/project-resume.html.twig" %}
					{% endfor %}
				{% endif %}
			</div>
			<!---End-Features---->
		</div>
	</div>
	<!---End-content---!>
{% endblock %}