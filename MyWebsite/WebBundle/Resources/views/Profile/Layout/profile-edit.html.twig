<div class="feature-grid2">
	<div class="feature-grid-head feature-grid-head3">
		<h3><span>Modifier</span> Profil</h3>
		<div class="feature-grid-head-top">
			<label> </label><label> </label>
			<div class="clear"> </div>
		</div>
	</div>
	<div class="new-form">
		{{ form_start(formProfile, { 'attr':{'class':'contact_form', 'name':'contact_form'} }) }}
			<div class="form-submit2">
				<input type="submit" class="submit" value="Enregistrer"/>
				{% if message is defined %}
					<div class="required_notification">{{ message }}</div>
				{% else %}
					<span class="required_notification">* Denotes Required Field</span>
				{% endif %}
			</div>
			<br/>
			<ul class="form-content">
				<br/>
				<li>
					<h2>Informations personnelles</h2>
				</li>
				<li>
					{{ form_label(formProfile.firstName, "Pr√©nom :") }}
					{{ form_widget(formProfile.firstName) }}
				</li>
				<li>
					{{ form_label(formProfile.lastName, "Nom :") }}
					{{ form_widget(formProfile.lastName) }}
				</li>
				<li>
					{{ form_label(formProfile.email, "Email :") }}
					{{ form_widget(formProfile.email) }}
				</li>
				{% if categories is not null %}
					{% for category in categories %}
						{% set category = attribute(categories, loop.index0) %}
						{% if category.type == 'content' %}
							{% include "MyWebsiteWebBundle:Profile:Layout/Form/profile-category-form.html.twig" %}
						{% endif %}
					{% endfor %}
				{% endif %}
			</ul>
		{{ form_end(formProfile) }}
	</div>
	<div class="clear"> </div>
</div>