{% extends "MyWebsiteWebBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - CVs{% endblock %}

{% block class_header %}header2{% endblock %}

{% block section %}
	<!---Start-content---->
	<div class="content">
		<div class="wrap">
			<!---start-Features---->
			<div class="feature-grids">
				<div class="feature-grid-head feature-grid-head1">
					<div class="feature-grid-head-top feature-grid-head-top1">
						<label> </label><span> </span> <label> </label>
						<div class="clear"> </div>
					</div>
					<h3><span>Mes</span> Curriculum vitae</h3>
					<p class="proinfo">Résumés de tous mes Cvs disponibles</p>
				</div>
				<div class="clear"> </div>
				{% if cvs == null %}
					<br/>
					<p>Aucun cv disponible...</p>
				{% else %}
					{% for cv in cvs %}
						<div class="feature-grid">
							<div class="feature-grid-left">
								{% if cv.picturePath != null %}
									<a href="#"><img src="{{ asset('bundles/mywebsiteweb/uploads' ~ cv.picturePath) }}" alt="" /></a>
								{% else %}
									<a href="#"><img src="{{ asset('bundles/mywebsiteweb/') }}images/fea1.png" alt="" /></a>
								{% endif %}
							</div>
							<div class="feature-grid-right">
								<h3 class="titreProjet">{{ cv.title | truncate(50, true, '...')}}</h3>
								<p>
									{% if cv.disponibility != null %}
										disponibility : {{ cv.disponibility }}
										<br/>
									{% endif %}
									{% if cv.mobility != null %}
										mobility : {{ cv.mobility }}
										<br/><br/>
									{% endif %}
									{% if cv.description != null %}
										<span class="description">
											{{ cv.description }}
										</span>
									{% endif %}			
								</p>
								<a class="btn" href="{{ path('cv_load', {'idCv': cv.id}) }}">Read More</a>
							</div>
							<div class="clear"> </div>
						</div>
					{% endfor %}
				{% endif %}
			</div>
			<!---End-Features---->
		</div>
	</div>
	<!---End-content---!>
{% endblock %}